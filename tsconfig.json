{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["es6", "dom"],
        "outDir": "./out",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["node", "vscode"]
    },
    "include": [
        "*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
